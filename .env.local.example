# Collection IDs
NEXT_PUBLIC_APPWRITE_USERS_COLLECTION_ID=users
NEXT_PUBLIC_APPWRITE_VINEYARDS_COLLECTION_ID=vineyards
NEXT_PUBLIC_APPWRITE_INVESTMENTS_COLLECTION_ID=investments
